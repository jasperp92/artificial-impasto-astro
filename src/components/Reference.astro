---
const {
  title,
  authors,
  year,
  link,
  embed = false, // Standard: Card, true = PDF einbetten
} = Astro.props;
---

{embed ? (
  <div class="my-6">
    <h3 class="mb-2">{title}</h3>
    <p class="text-sm text-gray-400 mb-2">{authors} ({year})</p>
    <iframe
      src={link}
      width="100%"
      height="600"
      class="border rounded"
    ></iframe>
  </div>
) : (
  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="block border rounded p-4 hover:bg-gray-800 transition"
  >
    <p class="italic">Link zum Paper</p>
    <h3 class="">{title}</h3>
    <p class="text-sm text-gray-400">{authors} ({year})</p>
  </a>
)}
