---
const {
  title,
  authors,
  year,
  link,
  type = "paper", // paper oder software
  embed = false, // Standard: Card, true = PDF einbetten
} = Astro.props;

const isSoftware = type === "software";
---

{
  embed ? (
    <div class="my-6">
      <h3 class="mb-2">{title}</h3>
      <p class="text-sm text-gray-400 mb-2">
        {authors} ({year})
      </p>
      <iframe src={link} width="100%" height="600" class="border rounded" />
    </div>
  ) : (
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="block border rounded p-4 h-fit max-w-120 hover:bg-gray-800 transition"
    >
<div class="italic inline-flex">
